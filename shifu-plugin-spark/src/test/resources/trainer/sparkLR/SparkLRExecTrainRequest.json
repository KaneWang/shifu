{
    "version": "0.3.0-SNAPSHOT",
    "requests": [
        {
            "requestType": "ExecTrain",
            "executionMode": "LOCAL_SINGLE",
            "globalParams": {
                "bindings": {
                    "Trainer": "ml.shifu.plugin.spark.trainer.SparkLRTrainer"
                },
                "sparkConf": {
                     "spark.master": "local",
                	 "spark.app.name": "LogisticRegressionModel"
                },
                "modelName": "demoModel",
                "pathPMML": "src/test/resources/data/wdbc/model.xml",
                "pathNormalizedData": "src/test/resources/data/wdbc/inputTrainData",
                "trainerID": "test",
                "pathOutput": "src/test/resources/trainer/sparkLR/modelOutput.lr",
                "splitRatio": 0.8,
                "stepSize": 0.6,
                "iterations":100
            }
        }
    ]
}