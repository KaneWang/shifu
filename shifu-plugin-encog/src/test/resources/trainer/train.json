{
    "name": "Train",
    "description": "step 6, train",
    "processor": {
        "spi": "RequestProcessor",
        "impl": "ml.shifu.plugin.encog.trainer.EncogTrainRequestProcessor",
        "params": {
            "modelName": "demoModel",
            "pathPMML": "src/test/resources/trainer/model.xml",
            "pathPMMLOutput": "src/test/resources/trainer/model_output.xml",
            "pathNormalizedData": "src/test/resources/trainer/normalized.txt",
            "pathNormalizedHeader": "src/test/resources/trainer/normalized_header.txt"
        }
    },
    "bindings": [
        {
            "spi": "Trainer",
            "impl": "ml.shifu.plugin.encog.trainer.EncogNNTrainer",
            "params": {
                "pathOutput": "src/test/resources/models/trainer/models",
                "numEpochs": 100,
                "trainerID": "test",
                "splitRatio": 0.8,
                "algorithm": "Q",
                "learningRate": 0.5,
                "hiddenLayers": [
                    {
                        "numHiddenNodes": 10,
                        "activationFunction": "sigmoid"
                    }
                ]
            }

        }
    ]
